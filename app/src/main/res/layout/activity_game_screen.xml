<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    tools:context=".GameScreen">

    <TableLayout
        android:id="@+id/sidebar"
        android:layout_width="160dp"
        android:layout_height="419dp"
        android:layout_marginStart="418dp"
        android:background="#ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startingMoney"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/BuyTower1"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Tower 1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/BuyTower2"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:text="Tower 2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/BuyTower3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tower 3" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/moneyImage"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/startingMoney"
        android:layout_width="89dp"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="48dp"
        android:text="@string/money"
        android:textColor="#ffcb05"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monumentHealth"
        android:layout_width="89dp"
        android:layout_height="31dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="16dp"
        android:text="@string/health"
        android:textColor="#ffcb05"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/healthImage"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/health" />

    <RelativeLayout
        android:id="@+id/moving"
        android:layout_width="570dp"
        android:layout_height="409dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/testBoi"
            android:layout_width="75dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="198dp"
            android:layout_marginTop="167dp"
            app:srcCompat="@drawable/charmander" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>